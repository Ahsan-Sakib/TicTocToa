<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="text"
            type="com.example.tictoctoe.model.Datax" />
    </data>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TableRow android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt1"
                android:layout_height="100dp"
                android:text="@{text.x[0]}" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt2"
                android:layout_height="100dp"
                android:text="@{text.x[1]}" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt3"
                android:layout_height="100dp"
                android:text="@{text.x[2]}" />
        </TableRow>

        <TableRow android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt4"
                android:layout_height="100dp"
                android:text="@{text.x[3]}" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt5"
                android:layout_height="100dp"
                android:text="@{text.x[4]}" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt6"
                android:layout_height="100dp"
                android:text="@{text.x[5]}" />
        </TableRow>

        <TableRow android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt7"
                android:layout_height="100dp"
                android:text="@{text.x[6]}" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt8"
                android:layout_height="100dp"
                android:text="@{text.x[7]}" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt9"
                android:layout_height="100dp"
                android:text="@{text.x[8]}" />
        </TableRow>
    </TableLayout>
</layout>
